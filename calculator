#calculator.java
package com.example.calculatorog;

import androidx.appcompat.app.AppCompatActivity;

import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;

public class MainActivity extends AppCompatActivity {
    Button b1,b2,b3,b4,b5,b6,b7,b8,b9,b0,ba,be;
    int n1,n2,n3,n4,n5,n6,n7,n8,n9,n0,sum=0;
    String r="",ne,na,first,last;
    EditText result;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);
        b1=(Button) findViewById(R.id.b1);
        b2=(Button) findViewById(R.id.b2);
        b3=(Button) findViewById(R.id.b3);
        b4=(Button) findViewById(R.id.b4);
        b5=(Button) findViewById(R.id.b5);
        b6=(Button) findViewById(R.id.b6);
        b7=(Button) findViewById(R.id.b7);
        b8=(Button) findViewById(R.id.b8);
        b9=(Button) findViewById(R.id.b9);
        b0=(Button) findViewById(R.id.b0);
        ba=(Button) findViewById(R.id.ba);
        be=(Button) findViewById(R.id.be);
        result=(EditText) findViewById(R.id.result);
        b1.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                n1 = Integer.parseInt(b1.getText().toString());
                r=r+n1;
                result.setText(r);
            }
        });
        b2.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                n2 = Integer.parseInt(b2.getText().toString());
                r = r + n2;
                result.setText(r);
            }
        });
        b3.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                n3 = Integer.parseInt(b3.getText().toString());
                r=r+n3;
                result.setText(r);
            }
        });
        b4.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                n4 = Integer.parseInt(b4.getText().toString());
                r=r+n4;
                result.setText(r);
            }
        });
        b5.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                n5 = Integer.parseInt(b5.getText().toString());
                r=r+n5;
                result.setText(r);
            }
        });
        b6.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                n6 = Integer.parseInt(b6.getText().toString());
                r=r+n6;
                result.setText(r);
            }
        });
        b7.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                n7 = Integer.parseInt(b7.getText().toString());
                r=r+n7;
                result.setText(r);
            }
        });
        b8.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                n8 = Integer.parseInt(b8.getText().toString());
                r=r+n8;
                result.setText(r);
            }
        });
        b9.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                n9 = Integer.parseInt(b9.getText().toString());
                r=r+n9;
                result.setText(r);
            }
        });
        b0.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                n0 = Integer.parseInt(b0.getText().toString());
                r=r+n0;
                result.setText(r);
            }
        });
        ba.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                na = ba.getText().toString();
                r=r+na;
                result.setText(r);
            }
        });
        be.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                ne = be.getText().toString();
                r=r+ne;
                result.setText(r);
                String d=na;
                String[] nums=r.split(d);
                for(String num : nums){
                    int temp = Integer.parseInt(num);
                    sum=sum+temp;
                }
                r=r+sum;
                result.setText(r);
            }
        });
    }
}
